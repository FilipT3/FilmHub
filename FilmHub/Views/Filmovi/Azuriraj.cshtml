@using FilmHub.Models
@model Film
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Novi)
{
    <h2>Unos novog filma</h2>
}
else
{
    <h2>Ažuriranje podataka o filmu: @Model.Naslov</h2>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Ispravite podatke!")

<div class="form-container">
    @if (!ViewBag.Novi)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Id)
            <div class="input-disabled">
                @Html.TextBoxFor(model => model.Id, new { disabled = true, @class = "form-control" })
            </div>
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(model => model.Naslov)
        @Html.TextBoxFor(model => model.Naslov, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Naslov, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Produkcija)
        @Html.TextBoxFor(model => model.Produkcija, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Produkcija, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Kategorija)
        @Html.EnumDropDownListFor(model => model.Kategorija, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Kategorija, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Trajanje)
        @Html.TextBoxFor(model => model.Trajanje, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Trajanje, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Godina)
        @Html.TextBoxFor(model => model.Godina, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Godina, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Glumci)
        @Html.TextBoxFor(model => model.Glumci, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Glumci, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Opis)
        @Html.TextAreaFor(model => model.Opis, new { @class = "form-control", rows = 5 })
        @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
    </div>

    <div class="button-group">
        <input type="submit" value="Spremi" class="btn btn-primary" />
        @Html.ActionLink("Povratak bez spremanja", "Popis", "Filmovi", null, new { @class = "btn btn-secondary" })
    </div>
</div>
}
