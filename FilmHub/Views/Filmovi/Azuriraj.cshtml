@using FilmHub.Models
@model Film
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4>@(ViewBag.Novi ? "Unos novog filma" : $"Ažuriranje podataka o filmu: {Model.Naslov}")</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "Ispravite podatke!", new { @class = "text-danger" })

                <div class="form-container">
                    @if (!ViewBag.Novi)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.Id, new { @class = "form-label" })
                            <div class="input-disabled">
                                @Html.TextBoxFor(model => model.Id, new { disabled = true, @class = "form-control" })
                            </div>
                        </div>
                    }

                    <div class="form-group">
                        @Html.LabelFor(model => model.Naslov, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Naslov, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Naslov, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Produkcija, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Produkcija, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Produkcija, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Kategorija, new { @class = "form-label" })
                        @Html.EnumDropDownListFor(model => model.Kategorija, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Kategorija, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Trajanje, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Trajanje, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Trajanje, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Godina, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Godina, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Godina, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Glumci, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Glumci, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Glumci, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Opis, new { @class = "form-label" })
                        @Html.TextAreaFor(model => model.Opis, new { @class = "form-control", rows = 5 })
                        @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
                    </div>

                    <div class="button-group text-center">
                        <input type="submit" value="Spremi" class="btn btn-primary" />
                        @Html.ActionLink("Povratak bez spremanja", "Popis", "Filmovi", null, new { @class = "btn btn-secondary ml-2" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .form-container {
        padding: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-label {
        font-weight: 300;
    }

    .input-disabled {
        background-color: #e9ecef;
        padding: 0.375rem 0.75rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .button-group {
        margin-top: 1.5rem;
    }

    .ml-2 {
        margin-left: 0.5rem;
    }

    .card-header {
        background-color: #007bff;
        color: #fff;
    }

    .card-body {
        background-color: #f8f9fa;
    }
</style>
