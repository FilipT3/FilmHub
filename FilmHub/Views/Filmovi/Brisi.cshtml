
@using FilmHub.Models
@model Film
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Potvrda brisanja</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">

</head>
<body>
    <div class="container mt-4">
        <div class="confirmation-container">
            <h2>Potvrda o brisanju novosti!</h2>
            <p>Jeste li sigurni da želite obrisati "<strong>@Model.Naslov</strong>"?</p>

            @using (Html.BeginForm("Brisi", "Filmovi", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Izbriši</button>
                <a href="@Url.Action("Popis", "Filmovi")" class="btn btn-secondary">Odustani</a>
            }
        </div>
    </div>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
<style>
    .confirmation-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        background-color: #ffffff;
        text-align: center;
    }

        .confirmation-container h2 {
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
            font-weight: 500;
        }

        .confirmation-container p {
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }

        .confirmation-container .btn {
            margin: 0.5rem;
        }
</style>

