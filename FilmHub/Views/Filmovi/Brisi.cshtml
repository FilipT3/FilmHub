@using FilmHub.Models
@model Film
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="card-body">
            <p class="confirmation-message">Jeste li sigurni da želite obrisati film <strong>@Model.Naslov</strong>?</p>

            @using (Html.BeginForm("Brisi", "Filmovi", FormMethod.Post, new { @class = "delete-form" }))
            {
                @Html.AntiForgeryToken()

                <button type="submit" class="btn btn-danger">Izbriši</button>
                @Html.ActionLink("Odustani", "Popis", "Filmovi", null, new { @class = "btn btn-secondary" })
            }
        </div>
    </div>
</div>

<style>
    .confirmation-message {
        font-size: 1.125rem; /* 18px */
        margin-bottom: 1.5rem; /* 20px */
    }

    .delete-form {
        display: flex;
        gap: 0.5rem; /* Space between buttons */
    }

    .btn {
        padding: 0.5rem 1rem; /* 10px 20px */
    }
</style>
