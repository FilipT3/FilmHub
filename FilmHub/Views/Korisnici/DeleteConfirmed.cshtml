@{
    ViewBag.Title = "Status brisanja korisnika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <style>
        .status-container {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            background-color: #ffffff;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            text-align: center;
        }

            .status-container h2 {
                margin-bottom: 1.5rem;
                font-size: 1.75rem;
                font-weight: 500;
            }

        .btn-custom {
            padding: 10px 20px;
            margin-top: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="status-container">
            <h2>Podaci uspješno izbrisani</h2>
            @Html.ActionLink("Povratak na popis korisnika", "Index", null, new { @class = "btn btn-primary btn-custom" })
        </div>
    </div>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
