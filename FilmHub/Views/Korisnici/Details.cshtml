@using FilmHub.Models
@model Korisnik
@{
    ViewBag.Title = "Detalji";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3>Detalji korisnika: @Model.Prezime @Model.Ime</h3>
        </div>
        <div class="card-body">
            <p><strong>Ime:</strong> @Model.Ime</p>
            <p><strong>Prezime:</strong> @Model.Prezime</p>
            <p><strong>Mail:</strong> @Model.Email</p>
            <p><strong>Lozinka:</strong> @Model.Lozinka</p>
            <p><strong>Ovlast:</strong> @Model.Ovlast.Naziv</p>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Index", "Korisnici")" class="btn btn-primary">Povratak na popis korisnika</a>
        </div>
    </div>
</div>

<style>

    .card {
        border-radius: 0.375rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .card-header {
        background-color: #007bff;
        color: #ffffff;
        padding: 1rem;
        border-bottom: 1px solid #0069d9;
    }

    .card-title {
        margin-bottom: 0;
    }

    .card-body p {
        margin-bottom: 1rem;
        line-height: 1.5;
    }

    .card-footer {
        background-color: #f8f9fa;
        padding: 1rem;
        border-top: 1px solid #dee2e6;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>

