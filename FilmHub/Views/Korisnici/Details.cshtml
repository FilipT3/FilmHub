@model FilmHub.Models.Korisnik

@{
    ViewBag.Title = "Detalji korisnika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <style>
        .details-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            background-color: #ffffff;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

            .details-container h2 {
                margin-bottom: 1.5rem;
                font-size: 1.75rem;
                font-weight: 500;
            }

            .details-container dl {
                margin: 0;
                padding: 0;
            }

            .details-container dt {
                font-weight: 500;
                margin-bottom: 0.5rem;
            }

            .details-container dd {
                margin-bottom: 1rem;
            }

        .btn-custom {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="details-container">
            <h2>Detalji korisnika: @Model.Prezime @Model.Ime</h2>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Ovlast.Naziv)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Ovlast.Naziv)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Lozinka)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Lozinka)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Prezime)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Prezime)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Ime)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Ime)
                </dd>
            </dl>

            <div class="mt-4">
                @Html.ActionLink("Uredi", "Edit", new { id = Model.KorisnickoIme }, new { @class = "btn btn-warning btn-custom" })
                @Html.ActionLink("Povratak na popis", "Index", new { @class = "btn btn-secondary btn-custom" })
            </div>
        </div>
    </div>

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
