            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Lozinka, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Lozinka, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Lozinka, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PotvrdiLozinku, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.PotvrdiLozinku, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.PotvrdiLozinku, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Prezime, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Prezime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Prezime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Ime, new { @class = "control-label col-md-2" })
