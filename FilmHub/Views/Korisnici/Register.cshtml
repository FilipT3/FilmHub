@model FilmHub.Models.RegisterViewModel
@{
    ViewBag.Title = "Registracija";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registracija</h2>
@using (Html.BeginForm("Register", "Korisnici", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.KorisnickoIme, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.KorisnickoIme, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.KorisnickoIme, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
