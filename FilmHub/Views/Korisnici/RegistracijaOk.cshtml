@{
    ViewBag.Title = "Registracija korisnika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <style>
        .notification-container {
            max-width: 500px;
            margin: 2rem auto;
            padding: 2rem;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            background-color: #ffffff;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

            .notification-container h2 {
                margin-bottom: 1.5rem;
                font-size: 1.75rem;
                font-weight: 500;
            }

            .notification-container .alert {
                margin-bottom: 1.5rem;
                font-size: 1.1rem;
            }

            .notification-container .btn {
                width: 100%;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="notification-container">
            <h2>@ViewBag.Title</h2>

            <div class="alert alert-success" role="alert">
                Uspješno ste se registrirali! Možete se prijaviti u aplikaciju.
            </div>

            @Html.ActionLink("Prijava u aplikaciju", "Prijava", "Korisnici", new { @class = "btn btn-primary btn-lg btn-block" })
        </div>
    </div>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
